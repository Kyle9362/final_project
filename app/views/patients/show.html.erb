<div class="page-header">
  <h3>Patient #<%= @patient.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Email</dt>
      <dd><%= @patient.email %></dd>

      <dt>Password</dt>
      <dd><%= @patient.password %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/patients" class="btn btn-primary">
        Back
      </a>
    </div>
  </div>
</div>

<!-- A Patient has many prescriptions -->

<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info">
        Prescriptions
      </li>

      <% @patient.prescriptions.each do |prescription| %>
        <li class="list-group-item">
          <a href="/prescriptions/<%= prescription.id %>">
            <%= prescription.doctor_id %>
          </a>
          <div class="btn-group btn-group-xs pull-right">
            <a href="/prescriptions/<%= prescription.id %>" class="btn btn-primary">
              <i class="fa fa-search-plus"></i>
            </a>
            <a href="/prescriptions/<%= prescription.id %>/edit" class="btn btn-warning">
              <i class="fa fa-edit"></i>
            </a>
            <a href="/delete_prescription/<%= prescription.id %>" class="btn btn-danger" rel="nofollow">
              <i class="fa fa-trash-o"></i>
            </a>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>

<!-- A Patient has many records -->

<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info">
        Records
      </li>

      <% @patient.records.each do |record| %>
        <li class="list-group-item">
          <a href="/records/<%= record.id %>">
            <%= record.patient_id %>
          </a>
          <div class="btn-group btn-group-xs pull-right">
            <a href="/records/<%= record.id %>" class="btn btn-primary">
              <i class="fa fa-search-plus"></i>
            </a>
            <a href="/records/<%= record.id %>/edit" class="btn btn-warning">
              <i class="fa fa-edit"></i>
            </a>
            <a href="/delete_record/<%= record.id %>" class="btn btn-danger" rel="nofollow">
              <i class="fa fa-trash-o"></i>
            </a>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>
